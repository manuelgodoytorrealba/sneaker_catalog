<div class="flex items-center justify-between mb-6">
  <h1 class="text-2xl font-bold">Admin · Sneakers</h1>
  <%= link_to "Nueva sneaker", new_sneaker_path,
      class: "px-3 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-500" %>
</div>

<div class="overflow-x-auto bg-white rounded-xl border">
  <table class="min-w-full text-sm">
    <thead class="bg-gray-50 text-left text-gray-600">
      <tr>
        <th class="px-4 py-3">ID</th>
        <th class="px-4 py-3">Marca/Modelo</th>
        <th class="px-4 py-3">SKU</th>
        <th class="px-4 py-3">Precio</th>
        <th class="px-4 py-3">Estado</th>
        <th class="px-4 py-3">Pub.</th>
        <th class="px-4 py-3">Imgs</th>
        <th class="px-4 py-3 text-right">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @sneakers.each do |s| %>
        <tr class="border-t">
          <td class="px-4 py-3"><%= s.id %></td>
          <td class="px-4 py-3">
            <div class="font-medium"><%= [s.brand, s.model].compact.join(" ") %></div>
            <div class="text-gray-500"><%= s.colorway %></div>
          </td>
          <td class="px-4 py-3"><%= s.sku %></td>

          <td class="px-4 py-3"><%= s.condition&.humanize %></td>
          <td class="px-4 py-3">
            <span class="inline-flex items-center px-2 py-1 rounded text-xs
              <%= s.published ? "bg-green-100 text-green-700" : "bg-gray-100 text-gray-600" %>">
              <%= s.published ? "Publicado" : "Oculto" %>
            </span>
          </td>
          <td class="px-4 py-3"><%= s.images.attached? ? s.images.count : 0 %></td>
          <td class="px-4 py-3">
            <div class="flex gap-2 justify-end">
            <%= link_to "Ver", s,
              class: "px-3 py-1.5 rounded-lg bg-blue-600 text-white font-medium hover:bg-blue-500 transition" %>

            <%= link_to "Editar", edit_admin_sneaker_path(s),
              class: "px-3 py-1.5 rounded-lg bg-yellow-500 text-white font-medium hover:bg-yellow-400 transition" %>
              <%= button_to (s.published ? "Ocultar" : "Publicar"),
                    toggle_publish_admin_sneaker_path(s),
                    method: :patch,
                    class: "px-2 py-1 rounded bg-indigo-600 text-white hover:bg-indigo-500" %>
              <%= button_to "Borrar", admin_sneaker_path(s),
                    method: :delete,
                    data: { confirm: "¿Seguro?" },
                    class: "px-2 py-1 rounded bg-red-600 text-white hover:bg-red-500" %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>