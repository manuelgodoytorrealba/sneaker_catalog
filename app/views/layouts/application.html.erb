<!DOCTYPE html>
<html>
  <head>
    <title>SneakersCatalog</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  </head>

  <body class="bg-gray-50 text-gray-900">
    <header class="bg-white border-b">
      <div class="max-w-7xl mx-auto px-4 py-4 flex items-center justify-between">
        <h1 class="text-xl font-bold">
          <%= link_to "Catálogo de Zapatillas", root_path %>
        </h1>

        <% if user_signed_in? && current_user.admin? %>
          <div class="flex items-center gap-2">
            <%= link_to "Admin", admin_sneakers_path, class: "px-3 py-2 rounded border hover:bg-gray-50" %>
            <%= link_to "Nueva sneaker", new_sneaker_path, class: "px-3 py-2 rounded-lg bg-blue-600 text-white hover:bg-blue-500" %>
          </div>
        <% end %>
      </div>

      <div class="max-w-7xl mx-auto px-4 py-2 flex justify-end items-center gap-2">
        <% if user_signed_in? %>
          <span class="mr-2">
            Hola,
            <%= link_to (current_user.full_name.presence || current_user.email),
                        edit_user_registration_path,
                        class: "text-blue-600 hover:underline" %>
          </span>
          <%= button_to "Cerrar sesión",
                destroy_user_session_path,
                method: :delete,
                class: "px-3 py-2 rounded border" %>
        <% else %>
          <%= link_to "Entrar", new_user_session_path, class: "px-3 py-2 rounded border" %>
          <%= link_to "Crear cuenta", new_user_registration_path, class: "px-3 py-2 rounded border" %>
        <% end %>
      </div>
    </header>

    <main class="max-w-7xl mx-auto px-4 py-8">
      <%= yield %>
    </main>
  </body>
</html>