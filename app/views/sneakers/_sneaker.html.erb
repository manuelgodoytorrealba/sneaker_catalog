<div id="<%= dom_id sneaker %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Brand:</strong>
    <%= sneaker.brand %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Model:</strong>
    <%= sneaker.model %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Colorway:</strong>
    <%= sneaker.colorway %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Size:</strong>
    <%= sneaker.size %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Sku:</strong>
    <%= sneaker.sku %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Price cents:</strong>
    <%= sneaker.price_cents %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Currency:</strong>
    <%= sneaker.currency %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Description:</strong>
    <%= sneaker.description %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Condition:</strong>
    <%= sneaker.condition %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Stock:</strong>
    <%= sneaker.stock %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Published:</strong>
    <%= sneaker.published? ? "Yes" : "No" %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Slug:</strong>
    <%= sneaker.slug %>
  </div>
</div>
